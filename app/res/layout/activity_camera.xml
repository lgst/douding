<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alphaBlack"
    android:orientation="vertical"
    tools:context="com.ddgj.util.camera.CameraActivity">
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:clickable="true"
          android:onClick="cancelClick"/>
    <LinearLayout
        android:id="@+id/act_camera_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="galleryClick"
                    android:padding="8dp"
                    android:text="@string/selecte_photo_from_gallery"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_light"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="graphClick"
                    android:padding="8dp"
                    android:text="@string/take_a_photo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="cancelClick"
                android:padding="8dp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
