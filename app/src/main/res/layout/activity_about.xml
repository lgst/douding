<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddgj.dd.activity.AboutActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="16dp">
            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center_horizontal"
                       android:src="@mipmap/ic_web_launcher"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="公司简介"
                      android:textColor="@color/colorPrimary"
                      android:textSize="16sp"
                      android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@string/about_us_content"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="版本：1.0.0"/>
            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ease_btn_blue_selector"
                    android:onClick="checkUpdate"
                    android:text="检查更新"
                    android:textColor="@color/white"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
