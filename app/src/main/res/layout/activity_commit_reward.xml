<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ddgj.dd.activity.CommitRewardActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back_blue"
        app:title="提交我的任务作品"
        app:titleTextColor="@color/colorPrimary"/>
    <View style="@style/LineGrey1px"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="作品内容"
                          android:textColor="@color/grey"/>
                <EditText android:id="@+id/content" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:background="@drawable/selector_edittext"
                          android:gravity="top"
                          android:hint="填写作品内容"
                          android:minHeight="100dp"
                          android:padding="4dp"
                          android:textColor="@color/black"
                          android:textSize="14sp"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="作品保密"
                          android:textColor="@color/grey"/>
                <RadioButton android:id="@+id/yes"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="16dp"
                             android:text="是"/>
                <RadioButton android:id="@+id/no"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="72dp"
                             android:checked="true"
                             android:text="否"/>
            </RadioGroup>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:text="相关图片"/>
                <HorizontalScrollView android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/add_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/uploading"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent" android:layout_height="48dp"
        android:background="@drawable/selector_bottom_btn_bg"
        android:text="提交我的任务作品"
        android:textColor="@color/white"/>
</LinearLayout>
