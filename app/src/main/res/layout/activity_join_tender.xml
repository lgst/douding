<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_join_tender"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ddgj.dd.activity.JoinTenderActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back_blue"
        app:title="我要应征"
        app:titleTextColor="@color/colorPrimary"/>
    <View style="@style/LineGrey1px"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="任务预算"/>
                <EditText
                    android:id="@+id/money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:padding="4dp"
                    android:textSize="14dp"/>
            </LinearLayout>
            <View style="@style/LineGrey1px"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="应征描述"/>
                <EditText android:id="@+id/detail"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="4dp"
                          android:background="@color/white"
                          android:gravity="top"
                          android:hint="填写应征描述"
                          android:inputType="textMultiLine"
                          android:minHeight="100dp"
                          android:textSize="14dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:text="相关图片"/>
                <HorizontalScrollView android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/add_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/uploading"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <View style="@style/LineGrey1px"/>
            <View android:layout_width="match_parent" android:layout_height="16dp"
                  android:background="@color/grey_lightE"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="16dp"
                      android:text="个人信息"/>
            <View style="@style/LineGrey1px"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="真实姓名"/>
                <EditText android:id="@+id/name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:hint="填写姓名"
                          android:inputType="text"
                          android:padding="4dp"
                          android:textSize="14dp"/>
            </LinearLayout>
            <View style="@style/LineGrey1px"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="联系方式"/>
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="填写联系方式"
                    android:inputType="phone"
                    android:padding="4dp"
                    android:textSize="14dp"/>
            </LinearLayout>
            <View style="@style/LineGrey1px"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="16dp"
                          android:visibility="gone">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="中标任务"/>
                <TextView
                    android:id="@+id/tender_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="4dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="提示： 你的个人信息同时交给雇主！"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_bottom_btn_bg"
            android:text="确认提交"
            android:textColor="@color/white"/>
</LinearLayout>
