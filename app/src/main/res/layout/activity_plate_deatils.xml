<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout style="@style/ActionBarLightTheme">

        <ImageView
            android:id="@+id/backup"
            style="@style/TitleBarImageTheme"
            android:src="@mipmap/ic_blue_back"/>

        <TextView
            android:id="@+id/post_title"
            style="@style/TitleBarTextTheme"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="40dp"
            android:paddingRight="32dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textSize="16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ddgj.dd.view.CircleImageView
                    android:id="@+id/head_pic"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/ic_account_circle_grey600_24dp"
                    app:border_color="@color/white"
                    app:border_width="1dp"/>

                <TextView
                    android:id="@+id/user_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:onClick="sendMessageClick"
                    android:padding="8dp"
                    android:src="@mipmap/ic_textsms_grey600_24dp"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/post_publish_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <View
        style="@style/LineGrey1px"/>
    <LinearLayout
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_lightE"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_edit_text_bg"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/comment"
            android:textColor="@color/black"/>
        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="16dp"
                   android:clickable="true"
                   android:onClick="supportClick"
                   android:padding="8dp"
                   android:src="@mipmap/ic_thumb_up_grey600_24dp"
                   android:visibility="gone"/>
        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="16dp"
                   android:padding="8dp"
                   android:src="@mipmap/ic_stars_grey600_24dp"
                   android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>