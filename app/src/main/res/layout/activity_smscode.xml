<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_smscode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddgj.dd.activity.SMSCodeActivity">
    <RelativeLayout
        style="@style/ActionBarTheme">
        <ImageView
            style="@style/TitleBarImageTheme"
            android:onClick="backClick"
            android:src="@mipmap/ic_chevron_left_white_24dp"/>
        <TextView
            style="@style/TitleBarTextTheme"
            android:text="短信验证"/>

    </RelativeLayout>
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_login_edit_text_bg"
        android:hint="手机号码"
        android:inputType="number"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <EditText
            android:id="@+id/sms_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_login_edit_text_bg"
            android:drawableLeft="@drawable/selector_radio_btn_message"
            android:hint="短信验证码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"/>
        <Button android:id="@+id/send_code"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ease_btn_blue_selector"
                android:onClick="sendCodeClick"
                android:text="获取验证码"
                android:textColor="@color/white"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/selector_login_btn_bg"
        android:elevation="0dp"
        android:onClick="submitClick"
        android:text="提交"
        android:textColor="@drawable/selector_login_btn_text"/>
</LinearLayout>
