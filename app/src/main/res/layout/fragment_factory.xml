<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:background="@android:color/white"
                  android:orientation="horizontal">
        <Button
            android:id="@+id/btn_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center"
            android:text="全国"/>
        <View android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_marginBottom="8dp"
              android:layout_marginTop="8dp"
              android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/btn_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center"
            android:text="全部工厂"/>
        <View android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_marginBottom="8dp"
              android:layout_marginTop="8dp"
              android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/btn_filed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center"
            android:text="经营范围"/>
    </LinearLayout>
    <View style="@style/LineBlue1dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@color/grey_lightE"
            android:dividerHeight="8dp">
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
        <FrameLayout android:id="@+id/content"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:visibility="gone"
                     android:background="#88000000">
            <ListView
                android:id="@+id/fac_type_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:entries="@array/fac_type"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/fac_filed_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:entries="@array/fac_filed"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>