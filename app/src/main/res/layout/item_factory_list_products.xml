<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_products_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_factory_products_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="会爆炸的三星"
                android:textColor="@color/factorysizecolor"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_factory_products_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已经炸了了一次又一次的三星如何补救市场。你坐高铁，坐飞机，只要拿着三星的note7，一概被拒，这么多年三星在人们心中打造的良好品牌，出了这么一档子，三星老总的心理阴影面积应该很大吧!"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/factorysize"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>