<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/ProductDetailItemContainer">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="jdfskljkldsaf"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginBottom="8dp"
            android:text="dsflkjlsdfjlfjdskljsdkjfdsjfjsdlfjslfj"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="50dp"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_time"
                android:drawablePadding="8dp"
                android:text="2016-10-1"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@color/waiting"
                android:gravity="center"
                android:text="等待接单"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>