<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:contentPadding="8dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="推荐悬赏"
                android:textColor="@android:color/black"
                android:textSize="18dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="编号"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="18dp"/>
            <TextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey_light"
                android:textSize="14dp"/>
        </LinearLayout>
        <TextView android:id="@+id/start_time"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@mipmap/ic_time_start"
                  android:drawablePadding="8dp"
                  android:gravity="center_vertical"
                  android:layout_marginTop="8dp"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="18dp"/>
        <TextView android:id="@+id/end_time"
                  android:layout_marginTop="8dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@mipmap/ic_time_end"
                  android:drawablePadding="8dp"
                  android:gravity="center_vertical"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="18dp"/>
        <TextView android:id="@+id/timer"
                  android:layout_marginTop="8dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@mipmap/ic_timer"
                  android:drawablePadding="8dp"
                  android:gravity="center_vertical"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="18dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:id="@+id/price"
                      android:layout_width="0dp"
                      android:layout_marginTop="8dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7"
                      android:textColor="@android:color/holo_red_light"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/status"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:gravity="right"
                      android:layout_marginTop="8dp"
                      android:textColor="@android:color/holo_red_light"
                      android:textSize="20dp"
                      android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>